---
import type { CollectionEntry } from 'astro:content';

interface Props {
  categoria: CollectionEntry<'categorias'>;
}

const { categoria } = Astro.props;
const { data: { title, description, image }, slug } = categoria;
---

<a  href={`/categorias/${slug}`} class="group relative overflow-hidden rounded-lg cursor-pointer transition-all duration-300 hover:shadow-xl block">
  <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-black/0 z-10"></div>
  <img  src={image}  alt={title} class="w-full h-64 object-cover transition-transform duration-300 group-hover:scale-110"/>
  <div class="absolute bottom-0 left-0 right-0 p-6 z-20">
    <h3 class="text-xl font-bold text-white mb-2">{title}</h3>
    <p class="text-gray-200 text-sm mb-4">{description}</p>
    <div class="flex items-center text-white text-sm font-medium">
      <span>Ver m√°s</span>
      <svg class="ml-2 w-4 h-4 transition-transform duration-300 group-hover:translate-x-2">
        <use href="/ui.svg#arrow" />
      </svg>
    </div>
  </div>
</a>