import { getCollection } from 'astro:content';
// 1. Genera una nueva ruta para cada entrada de colecciÃ³n
export async function getStaticPaths() {
  const categoryEntries = await getCollection('categories');
  return categoryEntries.map(category => ({
    params: { slug: category.slug }, props: { category: category.data },
  }));
}
// 2. Para tu plantilla, puedes obtener la entrada directamente de la prop
const { entry } = Astro.props;
const { Content } = await entry.render();
---
<h1>{entry.data.title}</h1>
<Content />